{
  "version": "1.0",
  "description": "Grasp strategy library derived from NVIDIA Kitchen-Sim-Demos. Maps object categories to optimal approach vectors, gripper parameters, and contact thresholds.",
  "strategies": {
    "top_down_wrap": {
      "description": "Vertical approach from above, wrap grip around cylindrical or box objects",
      "approach_direction": [0.0, 0.0, -1.0],
      "approach_angle_deg": 0,
      "pre_grasp_offset_mm": [0, 0, -40],
      "gripper_open_mm": 60.0,
      "gripper_close_mm": 5.0,
      "approach_speed_factor": 0.5,
      "contact_force_threshold_n": 2.0,
      "min_grip_width_mm": 20,
      "max_grip_width_mm": 65,
      "applicable_objects": ["beverage_can", "bottle", "cup_mug", "food_container"],
      "wrist_pitch_deg": 60,
      "notes": "Default strategy for most tabletop objects"
    },
    "top_down_pinch": {
      "description": "Vertical approach, pinch grip for thin or small objects",
      "approach_direction": [0.0, 0.0, -1.0],
      "approach_angle_deg": 0,
      "pre_grasp_offset_mm": [0, 0, -30],
      "gripper_open_mm": 40.0,
      "gripper_close_mm": 0.0,
      "approach_speed_factor": 0.3,
      "contact_force_threshold_n": 1.0,
      "min_grip_width_mm": 0,
      "max_grip_width_mm": 30,
      "applicable_objects": ["utensil", "pen", "small_tool", "lid"],
      "wrist_pitch_deg": 70,
      "notes": "For thin objects that require precision pinch"
    },
    "lateral_reach": {
      "description": "Horizontal approach for objects inside cabinets, microwaves, or on shelves",
      "approach_direction": [1.0, 0.0, 0.0],
      "approach_angle_deg": 90,
      "pre_grasp_offset_mm": [-60, 0, 0],
      "gripper_open_mm": 55.0,
      "gripper_close_mm": 5.0,
      "approach_speed_factor": 0.4,
      "contact_force_threshold_n": 2.5,
      "min_grip_width_mm": 20,
      "max_grip_width_mm": 60,
      "applicable_objects": ["food_container", "bowl", "plate", "mug_in_cabinet"],
      "wrist_pitch_deg": 0,
      "notes": "For objects inside enclosed spaces"
    },
    "handle_pull": {
      "description": "Pinch grip on handle, then pull linearly for drawers or laterally for doors",
      "approach_direction": [0.0, 0.0, 0.0],
      "approach_angle_deg": 0,
      "pre_grasp_offset_mm": [0, 0, -20],
      "gripper_open_mm": 35.0,
      "gripper_close_mm": 5.0,
      "approach_speed_factor": 0.3,
      "contact_force_threshold_n": 3.0,
      "min_grip_width_mm": 5,
      "max_grip_width_mm": 25,
      "applicable_objects": ["cabinet_handle", "drawer_handle", "fridge_handle", "oven_handle"],
      "wrist_pitch_deg": 45,
      "notes": "Grip handle then apply pulling force"
    },
    "knob_rotate": {
      "description": "Pinch grip on knob, then rotate wrist (J5) to turn",
      "approach_direction": [0.0, -1.0, 0.0],
      "approach_angle_deg": 0,
      "pre_grasp_offset_mm": [0, -15, 0],
      "gripper_open_mm": 25.0,
      "gripper_close_mm": 0.0,
      "approach_speed_factor": 0.2,
      "contact_force_threshold_n": 1.5,
      "min_grip_width_mm": 0,
      "max_grip_width_mm": 20,
      "applicable_objects": ["stove_knob", "faucet_knob", "temperature_dial"],
      "wrist_pitch_deg": 30,
      "rotation_axis": "j5",
      "rotation_range_deg": [-90, 90],
      "notes": "Requires wrist roll after grip"
    },
    "button_press": {
      "description": "Approach and press button with fingertip",
      "approach_direction": [0.0, -1.0, 0.0],
      "approach_angle_deg": 0,
      "pre_grasp_offset_mm": [0, -20, 0],
      "gripper_open_mm": 0.0,
      "gripper_close_mm": 0.0,
      "approach_speed_factor": 0.2,
      "contact_force_threshold_n": 0.5,
      "min_grip_width_mm": 0,
      "max_grip_width_mm": 0,
      "applicable_objects": ["microwave_button", "coffee_button", "kettle_button", "blender_button"],
      "wrist_pitch_deg": 45,
      "notes": "Keep gripper closed, use tip to press"
    },
    "scoop_lift": {
      "description": "Approach from side, slide under flat objects, then lift",
      "approach_direction": [1.0, 0.0, -0.2],
      "approach_angle_deg": 10,
      "pre_grasp_offset_mm": [-40, 0, -5],
      "gripper_open_mm": 65.0,
      "gripper_close_mm": 10.0,
      "approach_speed_factor": 0.3,
      "contact_force_threshold_n": 1.5,
      "min_grip_width_mm": 0,
      "max_grip_width_mm": 65,
      "applicable_objects": ["plate", "cutting_board", "flat_container", "lid_flat"],
      "wrist_pitch_deg": 80,
      "notes": "For flat objects that can't be top-gripped"
    }
  },
  "object_strategy_mapping": {
    "red_bull_can": "top_down_wrap",
    "coca_cola_can": "top_down_wrap",
    "soda_can": "top_down_wrap",
    "water_bottle": "top_down_wrap",
    "soda_bottle": "top_down_wrap",
    "coffee_mug": "top_down_wrap",
    "paper_cup": "top_down_wrap",
    "screwdriver": "top_down_pinch",
    "pliers": "top_down_wrap",
    "pen": "top_down_pinch",
    "tape_roll": "top_down_wrap",
    "stapler": "top_down_wrap",
    "small_box": "top_down_wrap",
    "tennis_ball": "top_down_wrap",
    "golf_ball": "top_down_pinch",
    "usb_cable": "top_down_pinch",
    "phone": "top_down_wrap",
    "scissors": "top_down_pinch",
    "glue_stick": "top_down_pinch",
    "battery": "top_down_pinch",
    "bowl": "top_down_wrap",
    "plate": "scoop_lift",
    "pot": "top_down_wrap",
    "pan": "lateral_reach",
    "spatula": "top_down_pinch",
    "whisk": "top_down_pinch",
    "tongs": "top_down_pinch",
    "knife": "top_down_pinch",
    "cutting_board": "scoop_lift",
    "food_container": "top_down_wrap",
    "kettle": "top_down_wrap",
    "blender_lid": "top_down_pinch",
    "cabinet_handle": "handle_pull",
    "drawer_handle": "handle_pull",
    "fridge_handle": "handle_pull",
    "oven_handle": "handle_pull",
    "microwave_handle": "handle_pull",
    "stove_knob": "knob_rotate",
    "faucet_handle": "knob_rotate",
    "microwave_button": "button_press",
    "coffee_button": "button_press",
    "kettle_button": "button_press"
  }
}
